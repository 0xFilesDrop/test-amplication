datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  emails    Email?
  firstName String?
  id        String   @id @default(uuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Email {
  createdAt DateTime @default(now())
  email     String?
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  userId    User?    @relation(fields: [id], references: [id])
  id        String?  @unique
}
